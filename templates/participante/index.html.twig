{% extends 'base.html.twig' %}

{% block title %}Participante{% endblock %}

{% block content %}
    {{ form_start(form, { 'attr' : { 'class': 'form form-mensaje col-lg-4 col-md-6 col-sm-9 col-xs-12 text-center mt-3' } }) }}
        {{ form_row(form.fecha, { 'attr' : { 'class': 'col-lg-4 col-md-6 col-sm-9 col-xs-12 text-center' } }) }}
        {{ form_row(form.banda, { 'attr' : { 'class': 'col-lg-4 col-md-6 col-sm-9 col-xs-12 text-center' } })}}
        {{ form_row(form.modo, { 'attr' : { 'class': 'col-lg-4 col-md-6 col-sm-9 col-xs-12 text-center' } })}}
        {{ form_row(form.receptor, { 'attr' : { 'class': 'col-lg-4 col-md-6 col-sm-9 col-xs-12 text-center' } }) }}
        <button type="submit" class="btn btn-lg btn-primary ml-2">Guardar</button>
    {{ form_end(form) }}


    <table class="table mt-3">
        <thead>
            <tr>
                <th class="d-none d-sm-block">Fecha</th>
                <th>Banda</th>
                <th>Modo</th>
                <th>Receptor</th>
                <th>Valido</th>
            </tr>
        </thead>
        <tbody>
            {% for mensaje in mensajes %}
            {#  <pre>
                {{ dump(mensaje.valido) }}
            </pre> #}
            <tr>
                    <td class="d-none d-sm-block">{{mensaje.fecha|date('Y-m-d H-m-i')}}</td>
                    <td>{{mensaje.banda}}</td>
                    <td>{{mensaje.modo}}</td>
                    <td>{{mensaje.receptor}}</td>
                    <td>{% if mensaje.valido %}
                        <img src='/images/tick.png'>
                    {% else %}
                        <img src='/images/x.png' style="width:50px">
                    {% endif %}</td>
            </tr>
            {% endfor %}
        </tbody>

    </table>
{% endblock %}
